<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitiy.VolunteeringListActivity"
    tools:ignore="MissingDefaultResource">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/teal_700"
        android:layoutDirection="ltr"
        android:id="@+id/sortTabsLayout2">


        <Button
            android:id="@+id/continue_to_search"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_below="@+id/editTextDate"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="#030F5C"
            android:text="לחיפוש"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/refresh"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_below="@+id/editTextDate"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:backgroundTint="#030F5C"
            android:text="נקה"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20dp"
            android:text="לחץ על התנדבות לבחירה"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/shapesListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layoutDirection="rtl"
            tools:listitem="@layout/list_view" />

    </LinearLayout>

</LinearLayout>