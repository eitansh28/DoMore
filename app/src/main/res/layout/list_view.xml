<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="90dp"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="-87dp"
            android:layout_marginBottom="-87dp"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/cityvol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:text="Hi how are you?"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:text="cristopher"
                    android:textColor="@color/black"
                    android:textDirection="rtl"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/associationName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layoutDirection="rtl"
                    android:text="Hi how are you?"
                    android:textSize="10sp"
                    android:textStyle="italic" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/strtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/kv"
            android:layout_marginHorizontal="70dp"
            android:layout_marginVertical="30dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="10dp"
            android:padding="6dp"
            android:text="8:35"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/endTime"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="27dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:text="-"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="52dp"
            android:layout_marginBottom="15dp"
            android:padding="6dp"
            android:text="05/02/22" />

        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="30dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="12dp"
            android:padding="6dp"
            android:text="8:35"
            android:textStyle="bold" />

    </RelativeLayout>


</LinearLayout>